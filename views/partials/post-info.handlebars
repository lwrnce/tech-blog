<div class="post">
  <div class="card" style="width: 100%;">
    <div class="card-header">
      <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
      </div>
    </div>
    <div class="card-body">
      <div class="meta">
        <div class="content">
          <p>{{content}}</p>
        </div>
        by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </div>
  </div>
</div>